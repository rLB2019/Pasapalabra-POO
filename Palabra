package Modelo;

/**
 *
 * @author alvaro
 */
public class Palabra {
    private char incial;
    private String palabra;
    private boolean acertada;
    private boolean fallada;
    private boolean aplazada;
    private Definicion definiciones[];
    
    public Palabra(char i, String p, boolean acertada, boolean f, boolean aplazada){
        this.incial = i;
        this.palabra = p;
        this.acertada = acertada;
        this.fallada = f;
        this.aplazada = aplazada;
    }
    
    public String mostrar(){
        return palabra;
    }
    
    public void agregarDef(Definicion d){
        this.definiciones[1] = d;
    }
    
    public void borrarDef(Definicion d){
      
    }
    
    public void cambiarDef(String d){
         String def = definiciones[0].getDefinicion();
         def = d;
    }
}
